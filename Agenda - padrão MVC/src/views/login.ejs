<%- include('includes/head')%>
<%- include('includes/navbar')%>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Login</h1>
            <p class="text-center lead">Faça login ou crie a sua conta abaixo.</p>
            
            <%- include('includes/messages'); %>
            <div class="row">

                <div class="col-lg">
                    <h4>Faça seu cadastro</h4>
                    <p>Ainda não cadastrado? crie sua conta abaixo</p>


                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label for="email">E-mail</label>
                          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Digite seu E-mail">
                        </div>
                        <div class="form-group">
                          <label for="senha">Senha</label>
                          <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha">
                        </div>
                        <div class="form-group form-check">
                          <input type="checkbox" class="form-check-input" id="chekout">
                          <label class="form-check-label" for="chekout">Aceito os termos de privacidade</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Criar</button>
                      </form>
                </div>

                <div class="col-lg">
                    <h4>Entrar</h4>
                    <p>Ja tem uma conta? Faça seu login abaixo</p>
                    <form action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label for="email">E-mail</label>
                          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Digite seu E-mail">
                        </div>
                        <div class="form-group">
                          <label for="senha">Senha</label>
                          <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha">
                        </div>                
                        <button type="submit" class="btn btn-primary">Entrar</button>
                      </form>
                </div>

            </div>

        </div>

        <div class="col-lg-2"></div>

    </div>
</div>

<%- include('includes/footer')%>